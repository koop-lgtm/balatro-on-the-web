        <script>
            let lastAdShownTime = 0; // ‰∏äÊ¨°ÂπøÂëäÂ±ïÁ§∫Êó∂Èó¥ÔºàÂàùÂßã‰∏∫0Ôºâ
             window.addEventListener("message", function(event) {
                // console.log("Êî∂Âà∞ iframe Ê∂àÊÅØÔºö", event.data);
                // ‰Ω†ÂèØ‰ª•Ê†πÊçÆÊ∂àÊÅØÁ±ªÂûãÂÅö‰∏çÂêåÁöÑÂ§ÑÁêÜ
                if (event.data.type === 'adcall') {

                    const now = Date.now();
                    const interval = now - lastAdShownTime;

                    if (interval >= 2 * 60 * 1000) { // 180ÁßíÔºà3ÂàÜÈíüÔºâ
                        lastAdShownTime = now;
                        showAdPopup();
                    } else {
                        console.log(`ÂπøÂëäÈó¥ÈöîÊú™Êª°Ë∂≥ÔºàÂ∑≤Ëøá ${Math.floor(interval / 1000)} ÁßíÔºâ`);
                    }
                }
            });
            let countdownTimer;
            function showAdPopup() {
                document.getElementById('adPopup').style.display = 'flex';
               
                // ÊèíÂÖ•ÂπøÂëä‰ª£Á†Å
                const adContainer = document.querySelector('#adPopup .ad-content .ad-content');
                adContainer.innerHTML = ''; // Ê∏ÖÁ©∫ÊóßÂπøÂëäÔºàÈÅøÂÖçÂ§öÊ¨°ÊèíÂÖ•Ôºâ

                const ins = document.createElement('ins');
                ins.className = 'adsbygoogle';
                ins.style.display = 'block';
                ins.style.width = '400px';
                ins.style.height = '300px';
                ins.setAttribute('data-ad-client', 'ca-pub-7161786823522141');
                ins.setAttribute('data-ad-slot', '3106108046');
                ins.setAttribute('data-ad-format', 'auto');
                ins.setAttribute('data-full-width-responsive', 'true'); // Âõ∫ÂÆöÂ∞∫ÂØ∏ÂπøÂëäÂª∫ËÆÆËÆæ‰∏∫ false

                adContainer.appendChild(ins);

                // Ë∞ÉÁî® adsbygoogle ÊòæÁ§∫ÂπøÂëä
                try {
                    (adsbygoogle = window.adsbygoogle || []).push({});
                } catch (e) {
                    console.warn('Adsense push error:', e);
                }

                // document.getElementById('adPopup').style.height = "100%";

                document.getElementById('adPopup').style.setProperty('height', '100%', 'important');
                let seconds = 10;
                const countdownEl = document.getElementById('countdown');
                countdownEl.innerText = '' ; // `${seconds} ÁßíÂêéËá™Âä®ÂÖ≥Èó≠`;

                document.getElementById('close-btn').innerText = seconds + ' seconds to close';
                countdownTimer = setInterval(() => {
                    seconds--;
                    if (seconds <= 0) {
                        // closeAdPopup();
                        document.getElementById('close-btn').innerText = 'Close';
                    } else {
                        // countdownEl.innerText = `${seconds} ÁßíÂêéËá™Âä®ÂÖ≥Èó≠`;
                        document.getElementById('close-btn').innerText = seconds + ' seconds to close';
                    }
                }, 1000);
            }

            function closeAdPopup() {
                if (document.getElementById('close-btn').innerText ==='Close') {
                    clearInterval(countdownTimer);
                    document.getElementById('adPopup').style.display = 'none';
                }
                

            }
        </script>
