    <script>
        let isDragging = false;
        let startY = 0;
        let currentY = 80;
        const backButton = document.getElementById('backButton');
        const fullscreenButton = document.getElementById('fullscreenButton');

        // ÊòæÁ§∫ Toast ÊèêÁ§∫
        function showToast(message) {
            const toast = document.getElementById('toast');
            if (!toast) {
                console.error('Toast element not found');
                return;
            }
            toast.textContent = message;
            toast.classList.add('show');
            
            // Á°Æ‰øù‰πãÂâçÁöÑÂÆöÊó∂Âô®Ë¢´Ê∏ÖÈô§
            if (window.toastTimeout) {
                clearTimeout(window.toastTimeout);
            }
            
            window.toastTimeout = setTimeout(() => {
                toast.classList.remove('show');
            }, 2000);
        }

        // ÂèëÈÄÅÂèçÈ¶à
        async function sendFeedback(action) {
            try {
                const response = await fetch('http://localhost:3005/newapi/log', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Forwarded-For': window.location.hostname
                    },
                    body: JSON.stringify({
                        action: action,
                        value: ''
                    })
                });

                if (response.ok) {
                    const message = action === 'like' ? 'Thanks for liking!' : 'Thanks for your feedback!';
                    showToast(message);
                } else {
                    showToast('Failed to send feedback. Please try again.');
                }
            } catch (error) {
                console.error('Error sending feedback:', error);
                showToast('Failed to send feedback. Please try again.');
            }
        }

        // ÊòæÁ§∫ÂèçÈ¶àÊ®°ÊÄÅÊ°Ü
        function showFeedbackModal() {
            if (isMobileDevice()) {
                const modal = document.getElementById('mobileFeedbackModal');
                modal.style.display = 'flex';
                document.getElementById('mobileFeedbackText').focus();
            } else {
                const modal = document.getElementById('feedbackModal');
                modal.style.display = 'flex';
                document.getElementById('feedbackText').focus();
            }
        }

        // ÈöêËóèÂèçÈ¶àÊ®°ÊÄÅÊ°Ü
        function hideFeedbackModal() {
            const modal = document.getElementById('feedbackModal');
            modal.style.display = 'none';
            document.getElementById('feedbackText').value = '';
        }

        function hideMobileFeedbackModal() {
            const modal = document.getElementById('mobileFeedbackModal');
            modal.style.display = 'none';
            document.getElementById('mobileFeedbackText').value = '';
        }

        // Êèê‰∫§ÂèçÈ¶à
        async function submitFeedback() {
            const feedbackText = document.getElementById('feedbackText').value.trim();
            if (!feedbackText) {
                alert('Please enter your feedback');
                return;
            }

            try {
                const response = await fetch('http://localhost:3005/newapi/log', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Forwarded-For': window.location.hostname
                    },
                    body: JSON.stringify({
                        action: 'feedback',
                        value: feedbackText
                    })
                });

                if (response.ok) {
                    hideFeedbackModal();
                    showToast('Thank you for your feedback!');
                }
            } catch (error) {
                console.error('Error submitting feedback:', error);
                showToast('Failed to submit feedback. Please try again.');
            }
        }

        async function submitMobileFeedback() {
            const feedbackText = document.getElementById('mobileFeedbackText').value.trim();
            if (!feedbackText) {
                alert('Please enter your feedback');
                return;
            }

            try {
                const response = await fetch('http://localhost:3005/newapi/log', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Forwarded-For': window.location.hostname
                    },
                    body: JSON.stringify({
                        action: 'feedback',
                        value: feedbackText
                    })
                });

                if (response.ok) {
                    hideMobileFeedbackModal();
                    showToast('Thank you for your feedback!');
                }
            } catch (error) {
                console.error('Error submitting feedback:', error);
                showToast('Failed to submit feedback. Please try again.');
            }
        }

        // ÁÇπÂáªÊ®°ÊÄÅÊ°ÜÂ§ñÈÉ®ÂÖ≥Èó≠
        document.getElementById('feedbackModal').addEventListener('click', function(event) {
            if (event.target === this) {
                hideFeedbackModal();
            }
        });

        document.getElementById('mobileFeedbackModal').addEventListener('click', function(event) {
            if (event.target === this) {
                hideMobileFeedbackModal();
            }
        });

        // ÊåâESCÈîÆÂÖ≥Èó≠Ê®°ÊÄÅÊ°Ü
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                if (isMobileDevice()) {
                    hideMobileFeedbackModal();
                } else {
                    hideFeedbackModal();
                }
            }
        });

        // ÂºÄÂßãÊ∏∏Êàè
        async function startGame() {
            const mobileGameView = document.getElementById('mobileGameView');
            const mobileGameOverlay = document.getElementById('mobileGameOverlay');
            const progressBar = document.getElementById('progressBar');
            
            // ÊòæÁ§∫Ê∏∏ÊàèÂÆπÂô®Âπ∂Á´ãÂç≥ËøõÂÖ•ÂÖ®Â±è
            mobileGameView.style.display = 'block';

            // Ëá™Âä®ÂÖ®Â±è
            var gamelayout = "landscape";
            const el = document.documentElement;
            if (el.requestFullscreen) {
                el.requestFullscreen().then(() => {
                // Â±èÂπïÊñπÂêëÊéßÂà∂
                const orientation = (window.screen.orientation || (window.screen).msOrientation || (window.screen).mozOrientation);
                
                if (orientation && orientation.lock) {
                    if (gamelayout === 'landscape') {
                        orientation.lock('landscape').catch(() => {});
                    } else if (gamelayout === 'portrait' || gamelayout === 'auto' || !gamelayout) {
                        orientation.lock('portrait').catch(() => {});
                    }
                }
                }).catch(error => {
                    console.log('Fullscreen request failed:', error);
                });
            }

            if (!document.fullscreenElement) {
                try {
                    await document.documentElement.requestFullscreen({
                        navigationUI: 'hide'
                    });
                } catch (error) {
                    console.log('Fullscreen request failed:', error);
                }
            }
            
            // Ê®°ÊãüÂä†ËΩΩËøõÂ∫¶
            let startTime = Date.now();
            const duration = 3000; // 3Áßí
            
            const updateProgress = () => {
                const currentTime = Date.now();
                const elapsed = currentTime - startTime;
                const progress = Math.min((elapsed / duration) * 100, 100);
                
                progressBar.style.width = `${progress}%`;
                
                if (progress < 100) {
                    requestAnimationFrame(updateProgress);
                } else {
                    mobileGameOverlay.style.display = 'none';
                }
            };
            
            requestAnimationFrame(updateProgress);

        }

        // ÈÄÄÂá∫Ê∏∏Êàè
        function exitGame() {
            const mobileGameView = document.getElementById('mobileGameView');
            const mobileGameOverlay = document.getElementById('mobileGameOverlay');
            
            if (document.fullscreenElement) {
                document.exitFullscreen().catch(() => {});
            }
            // ÊÅ¢Â§çÁ´ñÂ±è
            const orientation = (window.screen.orientation || (window.screen ).msOrientation || (window.screen).mozOrientation);
            if (orientation && orientation.lock) {
                orientation.lock('portrait').catch(() => {});
            }
            
            // ÈöêËóèÊ∏∏ÊàèËßÜÂõæÔºå‰ΩÜ‰øùÁïôiframe
            mobileGameView.style.display = 'none';
        }

        // ÁõëÂê¨ÂÖ®Â±èÂèòÂåñ
        document.addEventListener('fullscreenchange', handleFullscreenChange);
        document.addEventListener('webkitfullscreenchange', handleFullscreenChange);
        document.addEventListener('mozfullscreenchange', handleFullscreenChange);
        document.addEventListener('MSFullscreenChange', handleFullscreenChange);

        function handleFullscreenChange() {
            const mobileGameView = document.getElementById('mobileGameView');
            if (!document.fullscreenElement && 
                !document.webkitFullscreenElement && 
                !document.mozFullScreenElement && 
                !document.msFullscreenElement) {
                // Â¶ÇÊûúÈÄÄÂá∫ÂÖ®Â±èÔºå‰πüÈÄÄÂá∫Ê∏∏ÊàèËßÜÂõæ
                exitGame();
            }
        }

        // Âà§Êñ≠ PC/ÁßªÂä®Á´Ø
        function isMobileDevice() {
            return /Android|webOS|iPhone|iPad|iPod|BlackBerry|BB|PlayBook|IEMobile|Windows Phone|Kindle|Silk|Opera Mini/i.test(navigator.userAgent);
        }
        document.addEventListener("DOMContentLoaded", function() {
            if (!isMobileDevice()) {
                document.getElementById('pcGameEntry').style.display = '';
                document.getElementById('mobileGameEntry').style.display = 'none';
                document.getElementById('mobileGameView').style.display = 'none';
                // Ëá™Âä®ÂºÄÂßãÂä†ËΩΩPCÁ´ØÊ∏∏Êàè
                var frame = document.getElementById('desktopGameFrame');
                var overlay = document.getElementById('gameOverlay');
                var progressBar = document.getElementById('pcProgressBar');
                frame.src = 'https://game.randplays.com/balatro-online/index.html?v=1';
                overlay.style.display = 'flex';
                progressBar.style.width = '0%';
                let startTime = Date.now();
                const duration = 3000; // Êîπ‰∏∫3Áßí
                function updateProgress() {
                    const currentTime = Date.now();
                    const elapsed = currentTime - startTime;
                    const progress = Math.min((elapsed / duration) * 100, 100);
                    progressBar.style.width = progress + '%';
                    if (progress < 100) {
                        requestAnimationFrame(updateProgress);
                    } else {
                        overlay.style.display = 'none';
                    }
                }
                requestAnimationFrame(updateProgress);
            } else {
                document.getElementById('pcGameEntry').style.display = 'none';
                document.getElementById('mobileGameEntry').style.display = '';
                document.getElementById('mobileGameView').style.display = 'none';
            }
        });
    </script>
